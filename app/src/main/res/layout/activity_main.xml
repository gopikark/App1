<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="1000dp"
    android:background="@drawable/background"
    android:maxHeight="5000dp"
    android:minWidth="1000dp"
    android:minHeight="5000dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/e1"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="92dp"
        android:background="#6D9AAA"
        android:text="Employee 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/e2"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:background="#6D9AAA"
        android:text="Employee 2"
        app:layout_constraintStart_toStartOf="@+id/e1"
        app:layout_constraintTop_toBottomOf="@+id/e1" />

    <Button
        android:id="@+id/e3"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:background="#6D9AAA"
        android:text="Employee 3"
        app:layout_constraintStart_toStartOf="@+id/e2"
        app:layout_constraintTop_toBottomOf="@+id/e2" />

    <Button
        android:id="@+id/e4"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:background="#6D9AAA"
        android:text="Employee 4"
        app:layout_constraintStart_toStartOf="@+id/e3"
        app:layout_constraintTop_toBottomOf="@+id/e3" />

    <Button
        android:id="@+id/e5"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:background="#6D9AAA"
        android:text="Employee 5"
        app:layout_constraintStart_toStartOf="@+id/e4"
        app:layout_constraintTop_toBottomOf="@+id/e4" />

</androidx.constraintlayout.widget.ConstraintLayout>